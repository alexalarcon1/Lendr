# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /user/welcome               controllers.Application.newUser()

# RESTful Routes
# We allow some CRUD operations on Resources

GET     /user/new                  controllers.UserActivity.createForm()
POST    /user                      controllers.UserActivity.create()
DELETE  /user/:id                  controllers.UserActivity.delete(id: Long)
PUT     /user/:id                  controllers.UserActivity.update(id: Long)
GET     /user/:id                  controllers.UserActivity.show(id: Long)
GET     /user/login/form           controllers.UserActivity.loginForm()
POST    /user/login                controllers.UserActivity.login()


GET     /tool                      controllers.Tool.index()
GET     /tool/new                  controllers.Tool.createForm()
GET     /tool/:id                  controllers.Tool.show(id: Long)
DELETE  /tool/:id                  controllers.Tool.delete(id: Long)
PUT     /tool/:id                  controllers.Tool.update(id: Long)
POST    /tool                      controllers.Tool.create()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
